{
  "name": "agendapro",
  "version": "0.1.0",
  "description": "Secretaria virtual para macOS - GestiÃ³n de tareas con notificaciones fiables",
  "main": "dist-electron/electron/main.js",
  "author": "AgendaPro Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3456",
    "dev:electron": "wait-on http://localhost:3456 && npm run build:electron && electron .",
    "build": "npm run build:next && npm run build:electron",
    "build:next": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir && npm run postpack",
    "dist": "npm run build && electron-builder && npm run postpack",
    "dist:mac": "npm run build && electron-builder --mac && npm run postpack:mac",
    "postpack": "echo 'Build complete'",
    "postpack:mac": "mkdir -p release/mac/AgendaPro.app/Contents/Resources/app.asar.unpacked/node_modules/.prisma && cp -R node_modules/.prisma/client release/mac/AgendaPro.app/Contents/Resources/app.asar.unpacked/node_modules/.prisma/",
    "postinstall": "electron-builder install-app-deps",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.electron.json --noEmit"
  },
  "dependencies": {
    "@libsql/client": "^0.8.1",
    "@prisma/adapter-libsql": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.2.0",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0",
    "openai": "^6.15.0",
    "sql.js": "^1.13.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "next": "^15.0.0",
    "postcss": "^8.4.49",
    "prisma": "^5.22.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "wait-on": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
